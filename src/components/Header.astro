---
import Bulb from "@tabler/icons/outline/bulb.svg"

import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar"
import { Button } from "@/components/ui/button"
---

<header class="max-w-prose w-full flex items-center gap-3 mx-auto">
  <Avatar size="lg" class="size-24">
    <AvatarImage src="https://github.com/LaythAlqadhi.png" alt="" />
    <AvatarFallback>LA</AvatarFallback>
  </Avatar>
  <div class="flex flex-col">
    <span class="text-2xl font-semibold">Layth Alqadhi</span>
    <span class="text-muted-foreground">Software Developer</span>
    <span class="text-muted-foreground">Erbil, Iraq</span>
  </div>
  <Button
    variant="outline"
    size="icon"
    class="self-start ms-auto"
    aria-label="Toggle theme"
    onclick="toggleTheme()"><Bulb class="size-5!" /></Button
  >
</header>

<script is:inline>
  function toggleTheme() {
    const isDark = document.documentElement.classList.contains("dark")
    if (isDark) {
      document.documentElement.classList.remove("dark")
      localStorage.theme = "light"
    } else {
      document.documentElement.classList.add("dark")
      localStorage.theme = "dark"
    }
  }
</script>
