---
import MoonStars from "@tabler/icons/outline/moon-stars.svg"
import Sun from "@tabler/icons/outline/sun.svg"

import { Button } from "@/components/ui/button"
---

<Button
  variant="outline"
  size="icon"
  class="self-start ms-auto dark:[&>svg]:first:hidden not-dark:[&>svg]:last:hidden"
  aria-label="Toggle theme"
  onclick="toggleTheme()"><Sun /><MoonStars /></Button
>

<script is:inline>
  function toggleTheme() {
    const isDark = document.documentElement.classList.contains("dark")
    if (isDark) {
      document.documentElement.classList.remove("dark")
      localStorage.theme = "light"
    } else {
      document.documentElement.classList.add("dark")
      localStorage.theme = "dark"
    }
  }
</script>
